<view class="{{sidebarClass}}" bindtouchstart="touchstart" bindtouchend="touchend">
  <view class="sidebar-header">
    <view class="sidebar-header-avatar">
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <view class="sidebar-header-name">
      <open-data type="userNickName"></open-data>
    </view>
    <view class="iconBox close" bindtap="toggle">
      <image class="icon" src="../../images/close.svg"></image>
    </view>
  </view>
</view>