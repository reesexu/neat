.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 115rpx;
}
.avatar {
  height: 78rpx;
  width: 78rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-left: 30rpx;
}
.actions {
  /* padding-left: 25rpx; */
}
.actions input {
  height: 100%;
  flex: 1;
}

.todo-checkbox {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  border-width: 5rpx;
  border-style: solid;
}
.todo-body {
  flex: 1;
  width: 0;
}
.easy {
  border-color: #4AD7ED;
}
.normal {
  border-color: #F9C300;
}
.urgent {
  border-color: #F788A6;
}